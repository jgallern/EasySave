<Window x:Class="EasySaveV3.MonitoringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Core.ViewModel;assembly=Core"
        mc:Ignorable="d"
        Title="MonitoringWindow" Height="450" Width="600">

    <Grid>

        <Grid.ColumnDefinitions>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="28"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Margin="30,30,20,0">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0} - {1}">
                    <Binding Path="Id" />
                    <Binding Path="Name" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>


        <Button Content="Exit" 
                Command="{Binding ExitCommand}"
                Foreground="White"
                FontWeight="DemiBold"
                Width="auto"
                Height="auto"
                BorderThickness="1.5"
                Grid.Row="0"
                Grid.Column="2"
                Margin="0,20,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
        />


        <TextBlock
            FontSize="16"
            FontWeight="Normal"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="30,30,20,0">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0} --> {1}">
                    <Binding Path="dirSource" />
                    <Binding Path="dirTarget" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>



        <TextBlock Text="{Binding Statement}"
           FontSize="16"
           FontWeight="Bold"
           Grid.Row="2"
           HorizontalAlignment="Center"
           Grid.ColumnSpan="2"
           Margin="30,30,20,0"/>

        <TextBlock Text="{Binding Progress}"
           FontSize="18"
           FontWeight="Medium"
           Grid.Row="3"
           HorizontalAlignment="Center"
           Grid.ColumnSpan="2"
           Margin="30,40,30,0"/>

        <ProgressBar Minimum="0"
             Maximum="100"
             Value="{Binding ProgressValue, Mode=OneWay}"
             Height="25"
             Grid.Row="4"
             Grid.ColumnSpan="2"
             Margin="30,40,30,0"/>


            <Button Content="Run" 
                Command="{Binding RunCommand}"
                Foreground="White"
                FontWeight="DemiBold"
                Width="110"
                Height="25"
                Background="Green"
                BorderBrush="Green"
                BorderThickness="1.5"
                Grid.Row="5"
                Grid.Column="0"
                Margin="0,30,80,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
        />

        <Button Content="Pause" 
                Command="{Binding PauseCommand}"
                Foreground="White"
                FontWeight="DemiBold"
                Width="110"
                Height="25"
                Background="Orange"
                BorderBrush="Orange"
                BorderThickness="1.5"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Margin="0,30,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
        />

        <Button Content="Cancel" 
                Command="{Binding CancelCommand}"
                Foreground="White"
                FontWeight="DemiBold"
                Width="110"
                Height="25"
                Background="Red"
                BorderBrush="Red"
                BorderThickness="1.5"
                Grid.Row="5"
                Grid.Column="1"
                Margin="80,30,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
        />

    </Grid>

</Window>